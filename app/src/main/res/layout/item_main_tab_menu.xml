<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_main_tab1_search_map"
            android:layout_width="0.0dip"
            android:layout_height="102.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/main_search_map" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="지도에서 방 찾기"
                android:textColor="#ff000000"
                android:textSize="@dimen/text_xsmall"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="오피스텔/도시형생활주택"
                android:textColor="#ff000000"
                android:textSize="10.0sp"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="1.0dip"
            android:layout_height="86.0dip"
            android:layout_marginTop="12.0dip"
            android:background="#80d9d9d9" />

        <LinearLayout
            android:id="@+id/btn_main_tab1_search_subway"
            android:layout_width="0.0dip"
            android:layout_height="102.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/main_search_subway" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="지하철역으로 찾기"
                android:textColor="#ff000000"
                android:textSize="@dimen/text_xsmall"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="오피스텔/도시형생활주택"
                android:textColor="#ff000000"
                android:textSize="10.0sp"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="1.0dip"
            android:layout_height="86.0dip"
            android:layout_marginTop="12.0dip"
            android:background="#80d9d9d9" />

        <LinearLayout
            android:id="@+id/btn_main_tab1_search_officetel"
            android:layout_width="0.0dip"
            android:layout_height="102.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/main_search_officetel" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="단지로 방 찾기"
                android:textColor="#ff000000"
                android:textSize="@dimen/text_xsmall"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="오피스텔/도시형생활주택"
                android:textColor="#ff000000"
                android:textSize="10.0sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="4.0dip"
        android:background="@color/grey8" />
</LinearLayout>