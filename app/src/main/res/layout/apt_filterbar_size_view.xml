<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white1"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ffe1e1e1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="18.5dip"
        android:text="면적"
        android:textColor="@color/black1"
        android:textSize="@dimen/text_small" />

    <ListView
        android:id="@+id/sizeList"
        android:layout_width="fill_parent"
        android:layout_height="270.0dip"
        android:divider="@color/grey6"
        android:dividerHeight="1.0dip"
        android:paddingBottom="27.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="16.0dip"
        android:scrollbarSize="5.0dip"
        android:scrollbars="vertical" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ffe1e1e1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <Button
            android:id="@+id/cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.45"
            android:background="@drawable/apt_filter_selector_button_bg"
            android:text="@string/txt_cancel"
            android:textColor="@drawable/apt_filter_selector_button_txt"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="26.0dip"
            android:layout_gravity="center_vertical"
            android:background="#80e1e1e1" />

        <Button
            android:id="@+id/confirm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.45"
            android:background="@drawable/apt_filter_selector_button_bg"
            android:text="@string/txt_confirm"
            android:textColor="@drawable/apt_filter_selector_button_txt"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>