<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white1"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ffe1e1e1" />

    <!--<com.chbreeze.jikbang4a.app.view.filter.APTFilterRangeView
        android:id="@id/range_sale_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />-->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ffe1e1e1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <Button
            android:id="@+id/cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.45"
            android:background="@drawable/apt_filter_selector_button_bg"
            android:text="@string/txt_cancel"
            android:textColor="@drawable/apt_filter_selector_button_txt"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

        <View
            android:layout_width="1.0dip"
            android:layout_height="26.0dip"
            android:layout_gravity="center_vertical"
            android:background="#80e1e1e1" />

        <Button
            android:id="@+id/confirm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.45"
            android:background="@drawable/apt_filter_selector_button_bg"
            android:text="@string/txt_confirm"
            android:textColor="@drawable/apt_filter_selector_button_txt"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>